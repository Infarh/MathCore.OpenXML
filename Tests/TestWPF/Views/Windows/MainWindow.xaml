<Window x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:TestWPF"
        Title="{Binding Title}"
        Visibility="{Binding Visible, Converter={Bool2Visibility}}"
        DataContext="{Binding MainModel, Source={StaticResource Locator}}"
        Width="800" Height="450">
    <DockPanel>
        <Button DockPanel.Dock="Top" Command="{Binding HideWindowCommand}" Content="Скрыть"/>
        <DataGrid ItemsSource="{Binding Values}"/>
    </DockPanel>
</Window>
