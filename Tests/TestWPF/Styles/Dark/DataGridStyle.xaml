    <Style x:Key="@DataGridStyle" TargetType="DataGrid">
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource .DataGrid.VerticalGridLinesBrush}"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource .DataGrid.HorizontalGridLinesBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="Red"/>
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="DataGridEx.UseDataAnnotations" Value="True"/>
        <Setter Property="DataGridEx.AddRowNumber" Value="True"/>
    </Style>

    <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource @DataGridCellStyle}"/>
    <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource @DataGridColumnHeaderStyle}"/>
    <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource @DataGridRowStyle}"/>
    <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource @DataGridStyle}"/>

</ResourceDictionary>